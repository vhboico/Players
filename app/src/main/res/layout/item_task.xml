<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:background="@color/black">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/galoppo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giuliano Galoppo"
        android:fontFamily="@font/rubik_semi_bold"
        android:layout_marginStart="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_view"
        app:layout_constraintTop_toTopOf="@+id/image_view" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tv_task_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:text="Meia atacante do São Paulo Futebol Clube"
        android:textSize="14sp"
        android:fontFamily="@font/semi_bold_italic"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/image_view"
        app:layout_constraintTop_toBottomOf="@+id/tv_task_title" />

    <TextView
        android:id="@+id/tv_task_age"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:textSize="15sp"
        android:textStyle="italic"
        android:text="Idade: 35 anos"
        android:fontFamily="@font/semi_bold_italic"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/image_view"
        app:layout_constraintTop_toBottomOf="@+id/tv_task_description" />

    <TextView
        android:id="@+id/tv_task_number"
        android:text="N° 14"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginStart="32dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/semi_bold_italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_task_age"
        app:layout_constraintTop_toBottomOf="@+id/tv_task_description"/>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/red"
        android:layout_marginTop="4dp"
        android:alpha="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />




</androidx.constraintlayout.widget.ConstraintLayout>